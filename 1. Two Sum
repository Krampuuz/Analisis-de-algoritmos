//Al usar mapas esto se hace completmente optimo porque al usar los mapas
//solo tenemos que usar un ciclo entonces su complejidad es lineal
//En el peor de los casos se guardan los 10.000 elementos en el mapa y ese sería
//el numero maximo de evaluacione
//Aquí es importante tener en cuenta que se gasta mucha mas memoria que en 
//el metodo de la fuerza bruta


function twoSum(nums: number[], target: number): number[] {
    
    const mapa = new Map<number, number>(); 

    for (let i = 0; i < nums.length; i++) {
        const aux = target - nums[i];
        if (mapa.has(aux)) {
            return [mapa.get(aux)!, i];
        }
        mapa.set(nums[i], i);
    }
    
    return [];
}
